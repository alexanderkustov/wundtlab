function MasterView(){var e=Ti.UI.createView({backgroundColor:"#fff"}),t=Ti.UI.createTableView();return e.add(t),t.addEventListener("click",function(t){e.fireEvent("itemSelected",{link:t.row.link})}),e.refreshRssTable=function(e){if("[object Array]"===Object.prototype.toString.apply(e)){for(var i=[],r=0;r<e.length;r++)i.push(createRssRow(e[r]));t.setData(i)}},e}var createRssRow=function(e){var t=Ti.UI.createTableViewRow({height:70,link:e.link,className:"itemRow",hasChild:!0}),i=Ti.UI.createImageView({image:e.image,height:42,width:68,left:5,top:3}),r=Ti.UI.createLabel({text:e.title,color:"#000",height:70,font:{fontSize:16},left:83,right:5}),a=Ti.UI.createLabel({text:e.pubDate,textAlign:"center",color:"#444",font:{fontSize:12},height:"auto",width:68,left:5,bottom:3});return t.add(i),t.add(a),t.add(r),t};module.exports=MasterView;